<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/jsp/error/error404.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!--    GuestPages-->
    <servlet>
        <servlet-name>Registration</servlet-name>
        <jsp-file>/jsp/common/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/jsp/common/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--    UserPages-->
    <servlet>
        <servlet-name>Main</servlet-name>
        <jsp-file>/jsp/user/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/user/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <jsp-file>/jsp/user/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/user/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Game</servlet-name>
        <jsp-file>/jsp/user/game.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Game</servlet-name>
        <url-pattern>/user/game</url-pattern>
    </servlet-mapping>

    <!--    AdminPages-->
    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <jsp-file>/jsp/admin/adminPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin/adminPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserListPage</servlet-name>
        <jsp-file>/jsp/admin/userList.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListPage</servlet-name>
        <url-pattern>/admin/userList</url-pattern>
    </servlet-mapping>

    <!--    fixme-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.monkeybusiness.web.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>DoublePostSecureFilter</filter-name>
        <filter-class>com.monkeybusiness.web.controller.filter.DoublePostSecureFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DoublePostSecureFilter</filter-name>
        <url-pattern>/registration</url-pattern>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>GoBackActionFilter</filter-name>
        <filter-class>com.monkeybusiness.web.controller.filter.GoBackActionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GoBackActionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>GuestFilter</filter-name>
        <filter-class>com.monkeybusiness.web.controller.filter.GuestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GuestFilter</filter-name>
        <url-pattern>/registration</url-pattern>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.monkeybusiness.web.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user/main</url-pattern>
        <url-pattern>/user/profile</url-pattern>
        <url-pattern>/user/game</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.monkeybusiness.web.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/adminPage</url-pattern>
        <url-pattern>/admin/userList</url-pattern>
    </filter-mapping>
</web-app>